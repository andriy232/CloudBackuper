{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "%localappdata%\\NightKeeper\\Logs\\NightKeeper-.log",
          "shared": true,
          "flushToDiskInterval": 1,
          "rollingInterval": "Day"
        }
      }
    ]
  }
}